{
  "name": "portfolio-api-worker",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "db:create": "wrangler d1 create portfolio-db",
    "db:migrate": "wrangler d1 execute portfolio-db --file=../backend/exports/schema.sql",
    "db:seed": "wrangler d1 execute portfolio-db --file=../backend/exports/seed.sql",
    "r2:create": "wrangler r2 bucket create portfolio-images",
    "r2:upload": "node scripts/upload-images.js"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240117.0",
    "typescript": "^5.3.3",
    "wrangler": "^3.22.1"
  }
}
